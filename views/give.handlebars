<div class="translated-content">
  <header class="header-block container-fluid">
    <div class="row">
      <div class="navbar-brand col-12">
        {{#if (eq dataset "makers")}}
        <a href="http://findthemakers.com" target="_blank">
          <div class="icon icon-ftmakers_logo"></div>
        </a>
        {{else}}
        <a href="http://findthemasks.com" target="_blank">
          <div class="icon icon-ftm_logo"></div>
        </a>
        {{/if}}
        {{#if (eq dataset "makers")}}
        <span class="home-link location-link text-light i18n" data-i18n='ftm-makers-embed-brand'>
          Maker Groups
        </span>
        {{else}}
        <span class="makers-home-link location-link text-light i18n" data-i18n='ftm-embed-brand'>
          PPE Requesting Sites
        </span>
        {{/if}}
      </div>
    </div>
    <div id='filter-container' class="row filters-container mb-1 mb-lg-0">
      <div class="{{#if hideFilters}}col-12{{else}}col-lg-6{{/if}}">
        <div class="input-group mb-1">
          <div class="input-group-prepend">
            <span class="input-group-text bg-white border-0 search-icon-wrap">
              <img class="search-icon" src="/images/icons/search.svg">
            </span>
          </div>
          <input type="search" name="map-search" id="map-search" class="i18n form-control border-0"
            placeholder="Search by city, zip, or address" data-i18n="[placeholder]ftm-maps-search-placeholder">
          <div class="input-group-append">
            <span class="input-group-text bg-white border-0">
              <a href="javascript:;" class="map-action-link" id="use-location">
                <span class="i18n" data-i18n="ftm-maps-search-use-location">Use my location</span>
              </a>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 list-stats-reset mb-1">
        <span id="list-stats" style="display: none;"></span>
        <a href="javascript:;" class="map-action-link" id="reset-map">
          <span class="i18n" data-i18n="ftm-maps-search-reset">Reset map & list</span>
        </a>
      </div>
    </div>

  </header>

  <div class="row embed-main flex-lg-row no-gutters">
    <div class="locations-loading text-center">
      <div class="spinner-border" role="status"></div>
      {{#if (eq dataset "makers")}}
      <div class="i18n" data-i18n="ftm-makers-site-loading">Loading Maker Groups...</div>
      {{else}}
      <div class="i18n" data-i18n="ftm-donations-site-loading">Loading PPE request sites...</div>
      {{/if}}
    </div>

    <div class="col-12 {{#unless hideList}}col-lg-8{{/unless}} order-lg-2 {{#if hideMap}}d-none{{/if}}">
      <div class="map-container {{#if hideList}}w-100{{/if}}">
        <div id="map" data-enable-search="true"></div>
      </div>
    </div>

    <div class="col-12 {{#unless hideMap}}col-lg-4{{/unless}} order-lg-1 locations-container" style="display: none;">
      <div id="locations-list {{#if hideMap}}w-100{{/if}}" class="locations-list"></div>
    </div>
  </div>

  <footer class="container-fluid">
    <div class="row">
      <div class='col-12'>
        {{#if (eq dataset "makers")}}
        <p>
          <span class="i18n" data-i18n="[html]ftm-makers-collaboration-with">
            Made in collaboration with <a href="." target="_blank">#findthemasks</a> and
            <a href="https://www.nationofmakers.us" target="_blank">Nation of Makers</a>.
          </span>
          <span class="i18n" data-i18n="[html]ftm-makers-add-site-question">
            Want to join the #findthemasks makers map? Need to update or remove info?
            Please <a href="./maker-form" target="_blank">fill out this form</a>.
            We will review it as soon as possible.
          </span>
        </p>
        {{else}}
        <p>
          <span class="i18n" data-i18n="[html]ftm-collaboration-with">Made in
            collaboration with <a href="." target="_blank">#findthemasks</a>.</span>
          <span class="i18n" data-i18n="[html]ftm-add-donation-site-question">Want to join the #findthemasks map?
            Need to update or remove info?</span>
          <span class="i18n" data-i18n="[html]ftm-add-donation-site-answer">
            Please <a href="./donation-form">
              fill out this form</a>. We will review it as soon as possible.
          </span>
        </p>
        {{/if}}
      </div>
    </div>
  </footer>
</div>
{{> contact_form}}
