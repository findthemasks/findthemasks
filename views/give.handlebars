<div class="translated-content emb-embed">
  <header class="header-block container-fluid">
    <div class="row">
      <div class="navbar-brand col-12">
        {{#if (eq dataset "makers")}}
          <a href="http://findthemakers.com" target="_blank">
            <div class="icon icon-ftmakers_logo"></div>
          </a>
        {{else}}
          <a href="http://findthemasks.com" target="_blank">
            <div class="icon icon-ftm_logo"></div>
          </a>
        {{/if}}
        {{#if (eq dataset "makers")}}
          <span class="home-link location-link text-light i18n" data-i18n='ftm-makers-embed-brand'>
          Maker Groups
        </span>
        {{else}}
          <span class="makers-home-link location-link text-light i18n" data-i18n='ftm-embed-brand'>
          PPE Requesting Sites
        </span>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-8">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-white border-0 search-icon-wrap">
              <img class="search-icon" src="/images/icons/search.svg">
            </span>
          </div>
          <input type="search" name="map-search" id="map-search"
                 class="i18n form-control border-0"
                 placeholder="Search by location"
                 data-i18n="[placeholder]ftm-maps-search-placeholder">
          <div class="input-group-append">
            <span class="input-group-text bg-white border-0">
              <a href="javascript:;" class="map-action-link" id="use-location">
                <span class="i18n" data-i18n="ftm-maps-search-use-location">Use my location</span>
              </a>
            </span>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-4 list-stats-reset d-flex align-items-center justify-content-start justify-content-md-end mt-1 mt-md-0">
        <span id="list-stats"></span>
      </div>
    </div>
    <div class="row">
      <div class="col filter-collapse embed-filter">
        <div class="d-flex">
          <a class="map-action-link dropdown-toggle text-light flex-grow-1 i18n"
             data-i18n="ftm-filter-toggle"
             data-toggle="collapse"
             href="#filter-container" role="button" aria-expanded="false"
             aria-controls="filter-container">
            Toggle filter options
          </a>
          <div class="flex-grow-1 d-flex justify-content-end">
            <a href="javascript:;" class="map-action-link" id="reset-map">
              <span class="i18n text-light" data-i18n="ftm-maps-search-reset">Reset map & list</span>
            </a>
          </div>
        </div>
        <div id='filter-container' class="collapse filters-container mb-1 mb-lg-0">
        </div>
      </div>
    </div>
  </header>

  <div class="row embed-main flex-lg-row no-gutters {{#unless hideList}}list-open{{/unless}}" id="js-EmbedContainer">
    <div class="locations-loading text-center">
      <div class="spinner-border" role="status"></div>
      {{#if (eq dataset "makers")}}
        <div class="i18n" data-i18n="ftm-makers-site-loading">Loading Maker Groups...</div>
      {{else}}
        <div class="i18n" data-i18n="ftm-donations-site-loading">Loading PPE request sites...</div>
      {{/if}}
    </div>

    <div class="emb-col emb-col-list">
      <div id="locations-list" class="locations-list"></div>

      <button id="js-ToggleListButton" class="emb-toggleListButton btn-primary">
        {{#if hideList}}
          <span class="i18n" data-i18n="ftm-embed-toggle-open">Open list</span>
        {{else}}
          <span class="i18n" data-i18n="ftm-embed-toggle-close">Close list</span>
        {{/if}}
      </button>
    </div>

    <div class="emb-col emb-col-map">
      <div class="map-container">
        <div id="map" data-enable-search="true"></div>
      </div>
    </div>

    <div class="emb-mobileTopFooter">
      <div class="emb-toggleButtons">
        <button class="emb-toggleButton btn-secondary" data-active="true" data-type="list">List</button>
        <button class="emb-toggleButton btn-primary" data-active="false" data-type="map">Map</button>
      </div>
    </div>
  </div>

  <footer class="container-fluid">
    <div class="row">
      <div class='col-12'>
        {{#if (eq dataset "makers")}}
          <p>
          <span class="i18n" data-i18n="[html]ftm-makers-collaboration-with">
            Made in collaboration with <a href="." target="_blank">#findthemasks</a>,
            <a href="https://www.nationofmakers.us" target="_blank">Nation of Makers</a>, and
            <a href="https://opensourcemedicalsupplies.org/" target="_blank">Open Source Medical Supplies</a>.
          </span>
            <span class="i18n" data-i18n="[html]ftm-makers-add-site-question">
            Want to join the #findthemasks makers map? Need to update or remove info?
            Please <a href="./maker-form" target="_blank">fill out this form</a>.
            We will review it as soon as possible.
          </span>
          </p>
        {{else}}
          <p>
          <span class="i18n" data-i18n="[html]ftm-collaboration-with">Made in
            collaboration with <a href="." target="_blank">#findthemasks</a>.</span>
            <span class="i18n" data-i18n="[html]ftm-add-donation-site-question">Want to join the #findthemasks map?
            Need to update or remove info?</span>
            <span class="i18n" data-i18n="[html]ftm-add-donation-site-answer">
            Please <a href="./donation-form">
              fill out this form</a>. We will review it as soon as possible.
          </span>
          </p>
        {{/if}}
      </div>
    </div>
  </footer>
</div>
{{> contact_form}}
